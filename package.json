{
  "name": "taekwondo-scoring-system",
  "version": "1.0.0",
  "description": "Sistema de Puntuaci√≥n Round Robin para Taekwon-Do",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.taekwondo.scoring",
    "productName": "Sistema Taekwon-Do Round Robin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git",
      "!crear_ejecutable.bat"
    ],
    "win": {
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    },
    "portable": {
      "artifactName": "TaekwondoScoring-${version}-portable.exe"
    }
  },
  "keywords": [
    "taekwondo",
    "scoring",
    "tournament",
    "sports"
  ],
  "author": "Brian E. Lipnjak",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3"
  }
}
